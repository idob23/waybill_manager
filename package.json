{
  "name": "waybill-manager",
  "version": "1.0.0",
  "description": "Программа для автоматического заполнения путевых листов",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "waybill",
    "путевой лист",
    "водители"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^3.11.174"
  },
  "build": {
    "appId": "com.waybill.manager",
    "productName": "Менеджер путевых листов",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/**/*",
      "!node_modules/.cache/**",
      "!data/**",
      "!generated/**",
      "!dist/**"
    ],
    "asarUnpack": [
      "node_modules/pdfjs-dist/build/pdf.worker.js"
    ],
    "win": {
      "target": "portable"
    },
    "directories": {
      "output": "dist"
    }
  }
}
